<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.ahorcado.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/palabra"
        android:layout_width="299dp"
        android:layout_height="58dp"
        android:layout_marginBottom="370dp"
        android:layout_marginTop="54dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/adivinar"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/letra"
        app:layout_constraintTop_toBottomOf="@+id/intentos" />

    <EditText
        android:id="@+id/letra"
        android:layout_width="120dp"
        android:layout_height="49dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="9dp"
        android:ems="10"
        android:hint="Ingresar letra"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:minLines="1"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/adivinar"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adivinar" />

    <Button
        android:id="@+id/adivinar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="263dp"
        android:text="ADIVINAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/letra"
        app:layout_constraintTop_toBottomOf="@+id/palabra" />

    <TextView
        android:id="@+id/intentos"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/palabra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
